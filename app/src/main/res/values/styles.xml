<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="tablayout_style" parent="android:Widget">
        <item name="tabIndicatorColor">@color/color_f00</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabSelectedTextColor">@color/color_f00</item>
        <item name="tabTextColor">@color/color_aaa</item>
        <item name="tabTextAppearance">@style/TextAppearance.Design.Tab</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="toolbar_theme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/color_ffffff</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>
</resources>
